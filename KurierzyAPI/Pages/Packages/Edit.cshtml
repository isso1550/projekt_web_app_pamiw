@page
@model KurierzyAPI.Pages.Packages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Package.Id" />
            <div class="form-group">
                <label asp-for="Package.Weight" class="control-label"></label>
                <input asp-for="Package.Weight" class="form-control" />
                <span asp-validation-for="Package.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Delivery_Address" class="control-label"></label>
                <input asp-for="Package.Delivery_Address" class="form-control" />
                <span asp-validation-for="Package.Delivery_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Send_Date" class="control-label"></label>
                <input asp-for="Package.Send_Date" class="form-control" />
                <span asp-validation-for="Package.Send_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Deliver_Date" class="control-label"></label>
                <input asp-for="Package.Deliver_Date" class="form-control" />
                <span asp-validation-for="Package.Deliver_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.DelivererId" class="control-label"></label>
                <select asp-for="Package.DelivererId" class="form-control" asp-items="ViewBag.DelivererId"></select>
                <span asp-validation-for="Package.DelivererId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
